<%- include("../admin/layout/header") %>
<div class="px-4 mt-3">
  <div class="card">
    <div class="card-header container-fluid">
      <div class="row">
        <div class="col-md-9">
          <h3 class="w-75">Category</h3>
        </div>
       
        <div class="col-md-3 float-right">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add Categories
        </button>
        </div>
      </div>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Product details
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form class="mb-3" action="/admin/addCategory" method="POST" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label for="email" class="form-label">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id=""
                      name="name"
                      placeholder="Enter category name"
                      autofocus
                    />
                  </div>
                  <div class="mb-3 ">
                    <label for="" class="form-label">Discription</label>
                    <input
                      type="text"
                      class="form-control"
                      id=""
                      name="discription"
                      placeholder=""
                      autofocus
                    />
                  </div>
                  <div class="mb-3 ">
                    <label for="" class="form-label">Offer Percentage</label>
                    <input
                      type="text"
                      class="form-control"
                      id=""
                      name="offerPercentage"
                      placeholder=""
                      autofocus
                    />
                  </div>
                  <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Multiple files input example</label>
                    <input class="form-control" name="imageurl" type="file" id="formFileMultiple" multiple />
                  <div class="mt-3 float-right">
                    <button class="btn btn-danger" type="submit">
                     Submit
                    </button>
                  </div>
                </form>
              </div>
              <div class="modal-footer"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%if(cateExist.length){%>
      <p class="text-danger"><%=cateExist%></p>
    <%}%>
    <%if(cateExist1.length){%>
      <p class="text-danger"><%=cateExist1%></p>
    <%}%>
    <div class="table-responsive text-nowrap">
      
      <table class="table table-hover">
        
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>discription</th>
            <th>offer </th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody class="table-border-bottom-0">
          <% for(var i=0; i<category.length; i++) { %>
          <tr>
            <td><img width="40px" height="40px"src="/image<%= category[i].imageurl[0].filename %>" alt="...."></td>
            <td> <%=category[i].name%></td>
            <td> <%=category[i].discription%></td>
            <td><%=category[i].offerPrecentage%></td>
            <td><a href="/admin/editcategory/<%=category[i]._id%>"><button type="button" class="btn btn-success">Edit</button></a></td>
            <td><a href="/admin/deletecategory/<%=category[i]._id%>"><button type="button" class="btn btn-danger"onClick="return confirm('are you sure to delete this ?')">Delete</button></a></td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>

