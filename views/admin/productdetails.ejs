<%- include("../admin/layout/header") %>   
<div class="px-4 mt-3">
<div class="card">
    <div class="card-header container-fluid">
        <div class="row">
          <div class="col-md-10">
            <h3 class="w-75 ">product details</h3>
          </div>
        </div>
      </div>
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead>
          <tr>
            <th >Name</th>
            <th ><%=product.title%></th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">  
          <tr>
            <th >price</th>
            <td><%=product.price%></td>
            </tr>
            <tr>
            <th >category</th>
            <td><%=product.category.name%></td>
            </tr>
            <tr>
                <th >brand</th>
                <td><%=product.brand%></td>
                </tr>
                <tr>
                  <th >Offer Percentage</th>
                  <td><%=product.offerPercentage%></td>
                  </tr>
                <tr>
                    <th >size</th>
                    <td><%=product.size%></td>
                    </tr>
                    <tr>
                        <th >color</th>
                        <td><%=product.color%></td>
                        </tr>
                        <tr>
                            <th >quantity</th>
                            <td><%=product.quantity%></td>
                            </tr>
                            <tr>
                                <th >description</th>
                                <td><%=product.description%></td>
                                </tr>
                                <tr>
                                    <th >image</th>
                                    <td><% for(var i=0; i<product.imageurl.length; i++) { %>
                                        <img width="80px" height="80px"src="/image<%= product.imageurl[i].filename %>" alt="...." id="imgview">
                                        <%}%></td>
                                    </tr>
              
            
         
        </tbody>
      </table>
    </div>
  </div>
</div>

