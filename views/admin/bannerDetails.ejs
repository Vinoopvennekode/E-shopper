<div class="px-4 mt-3">
<div class="card">
    <div class="card-header container-fluid">
        <div class="row">
          <div class="col-md-10">
            <h3 class="w-75 ">Home banner</h3>
          </div>
          <div class="col-md-2 float-right">
            <a href='/admin/add_banner'>
                <button class="btn btn-primary">
                    Add Banner
                </button>
            </a>
            
           </div>
        </div>
      </div>
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead>
          <tr>
            <th> smallheader</th>
            <th>Banner Title</th>
            <th>url</th>
            <th>Image</th>
            
          </tr>
        </thead>
        
        <tbody class="table-border-bottom-0">  
            <% for(var i=0; i<banner.length; i++) { %>
          <tr>
            <td>   <%=banner[i].
                smallheader%></td>
            <td><%=banner[i].title%></td>
            <td><%=banner[i].url%> </td>
            <td>
                <img width="400px" height="200px" src="/bannerimage<%= banner[i].imageurl[0].filename %>" alt="....">
            </td>
          </tr>  
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>

