<%- include("../admin/layout/header") %>   
<div class="px-4 mt-3">
<div class="card">
    <div class="card-header container-fluid">
        <div class="row">
          <div class="col-md-10">
            <h3 class="w-75 ">Users</h3>
          </div>
        </div>
      </div>
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead>
          <tr>
            
            <th>Name</th>
            <th>Email</th>
            <th>Mobile </th>
            <th>Date</th>
            <th>Block</th>
          </tr>
        </thead>
        
        <tbody class="table-border-bottom-0">  
       <% for(var i=0; i<user.length; i++) { %>
          <tr>
            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> <%=user[i].userName%></strong></td>
            <td> <%=user[i].email %></td>
            <td><%=user[i].mobile %></td>
            <td><%=user[i].date %></td>  
            
            <% if(user[i].block===true){ %>
                <td><a href="/admin/unblock/<%=user[i]._id%>"><button type="button" class="btn btn-success">Unblock</button></a></td>
                <% }else{ %>
                    <td><a href="/admin/block/<%=user[i]._id%>"><button type="button" class="btn btn-danger">Block</button></a></td>
                    <% } %>
           
          </tr>  
         <% } %>
         
        </tbody>
      </table>
    </div>
  </div>
</div>

