                        <h5 id="discount" class="font-weight-bold">$<%=cart.subtotal%></h5>
                    </div>
                    <a href="/checkout"><button class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</button></a>
                </div>
             
            </div>
        </div>
       
     </div>
     <%}%>  
 </div>

